<Application x:Class="Ripperoni.App" StartupUri="MainWindow.xaml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Ripperoni.MVVM.ViewModel"
             xmlns:v="clr-namespace:Ripperoni.MVVM.View">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Themes/MenuScrollTheme.xaml"/>
                <ResourceDictionary Source="Themes/MenuBorderTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:PropertiesViewModel}">
                <v:PropertiesView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                <v:SettingsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:AboutViewModel}">
                <v:AboutView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>

