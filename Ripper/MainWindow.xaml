<Window x:Class="Ripper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ripper" mc:Ignorable="d"
        xmlns:vm="clr-namespace:Ripper.MVVM.ViewModel"
        xmlns:v="clr-namespace:Ripper.MVVM.View" Title="KPNC Ripperoni"
        Height="710" Width="410" WindowStyle="None" ResizeMode="NoResize"
        Background="Transparent" AllowsTransparency="True">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Border Margin="10" Background="#202020" CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90"
                              RenderingBias="Quality" ShadowDepth="2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="35"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" x:Name="DragBar" Background="#202020"
                  MouseLeftButtonDown="DragBar_MouseLeftButtonDown" CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0" Margin="9,4,9,4" Source="Images/Pepperoni.png"/>

                    <TextBlock Text="KPNC Ripperoni" Grid.Column="1"
                           VerticalAlignment="Center" FontSize="12"
                           HorizontalAlignment="Left" Foreground="White"/>

                    <Button Grid.Column="2" FontFamily="Segoe MDL2 Assets"
                        Content="&#xE108;" BorderThickness="0" Foreground="White" Click="Button_Click_1">
                        <Button.Resources>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3D3D3D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Grid.Column="3" FontFamily="Segoe MDL2 Assets"
                            Content="&#xE10A;" BorderThickness="0" Foreground="White"
                            Height="25" VerticalAlignment="Top" Click="Button_Click">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="0,8,0,0"/>
                            </Style>

                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>

            <Border Grid.Row="1" BorderBrush="#3D3D3D" BorderThickness="0,1,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <RadioButton Content="Downloads" FontSize="14" Grid.Column="0"
                                 IsChecked="True" Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding DownloadsVC}" x:Name="Downloads"/>

                    <RadioButton Content="Properties" FontSize="14" Grid.Column="1"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding PropertiesVC}"/>

                    <RadioButton Content="Settings" FontSize="14" Grid.Column="2"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding SettingsVC}"/>

                    <RadioButton Content="About" FontSize="14" Grid.Column="3"
                                 Style="{StaticResource MenuButtonTheme}"
                                 Command="{Binding AboutVC}"/>
                </Grid>
            </Border>

            <Grid Grid.Row="2">
                <ContentControl Content="{Binding CurrentView}"/>

                <ScrollViewer Background="#202020" VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Style>
                        <Style TargetType="{x:Type ScrollViewer}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=Downloads}"
                                             Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>

                            <Setter Property="Visibility" Value="Hidden"/>
                        </Style>
                    </ScrollViewer.Style>
                    
                    <Grid>
                        <TextBlock Text="There are no currently active downloads..."
                       IsHitTestVisible="False" Foreground="White"
                       HorizontalAlignment="Center" Margin="10"/>

                        <StackPanel x:Name="Records">

                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <Border Grid.Row="3" BorderBrush="#3D3D3D" BorderThickness="0,1,0,1" Padding="5,0,5,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" CornerRadius="15" Height="30" Margin="5"
                            BorderBrush="White" BorderThickness="1" Background="#191919">
                        <Grid>
                            <TextBox Padding="10,0,10,0" VerticalAlignment="Center"
                                     Foreground="White" BorderThickness="0"
                                     Background="Transparent" TextChanged="Input_Changed"
                                     x:Name="Input" CaretBrush="White" Margin="1"/>

                            <TextBlock Text="Search query or direct link..."
                                       IsHitTestVisible="False" Margin="13,0,0,0"
                                       VerticalAlignment="Center" Foreground="#969696"
                                       HorizontalAlignment="Left">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=Input}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>

                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" CornerRadius="15" Height="30" Margin="5"
                            BorderBrush="White" BorderThickness="1">
                        <Button Grid.Column="3" FontFamily="Segoe MDL2 Assets" Background="#191919"
                                Content="&#xE896;" BorderThickness="0" Foreground="White" Click="Button_Click_2">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="15"/>
                                </Style>

                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3D3D3D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Border>

                    <Border Grid.Column="2" CornerRadius="15" Height="30" Margin="5"
                            BorderBrush="White" BorderThickness="1">
                        <Button Grid.Column="3" FontFamily="Segoe MDL2 Assets" Background="#191919"
                                Content="&#xE094;" BorderThickness="0" Foreground="White" Click="Button_Click_3">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="15"/>
                                </Style>

                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3D3D3D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="10"
                           HorizontalAlignment="Center" Foreground="White"
                           Text="KPNC Ⓒ 2022" MouseDown="TextBlock_MouseDown"/>

                <TextBlock Grid.Column="1" VerticalAlignment="Center" FontSize="10"
                           HorizontalAlignment="Center" Foreground="#007ACC"
                           Text="Project Website" MouseDown="TextBlock_MouseDown_1"/>

                <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="10"
                           HorizontalAlignment="Center" Foreground="#007ACC"
                           Text="Git Repository" MouseDown="TextBlock_MouseDown_2"/>

                <TextBlock Grid.Column="3" VerticalAlignment="Center" FontSize="10"
                           HorizontalAlignment="Center" Foreground="#007ACC"
                           Text="Open Output" MouseDown="TextBlock_MouseDown_3"/>
            </Grid>
        </Grid>
    </Border>
</Window>

